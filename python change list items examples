#change item value
thislist = ['michael', 'is', 'the', 'best']
thislist[3] = 'greatest'
print(thislist)
#change a range of item values
thislist = ["apple", "banana", "cherry", "orange", "kiwi", "mango"]

thislist[1:3] = ["blackcurrant", "watermelon"]

print(thislist)
#example numner 2 of change a range of item values, changing the second value by replacing it with 2 new values
thislist = ["apple", "banana", "cherry"]
thislist[1:2] = ["blackcurrant", "watermelon"]
print(thislist)

thislist = ["apple", "banana", "cherry"]
thislist[1:3] = ["watermelon"]
print(thislist)

#inserting a new list without replacing the others
thislist = ['apple', 'banana', 'chaery']
thislist.insert(2, 'watermelon')
print(thislist)
